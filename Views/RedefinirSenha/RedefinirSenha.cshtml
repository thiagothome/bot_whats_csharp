@model whats_csharp.Models.RedefinirSenhaModel
@{
  ViewData["Title"] = "Redefinir Senha";
  ViewBag.EsconderBotaoLogout = true;
}

<div class="d-flex justify-content-center align-items-center vh-100">
  <form class="p-4 rounded shadow" asp-controller="RedefinirSenha" asp-action="ConfirmarRedefinirSenha" method="post" style="width: 500px; background-color: #fff;">
    @{
      var modelError = ViewData.ModelState[""];
    }
    @if (modelError != null && modelError.Errors.Count > 0)
    {
      <div class="text-danger text-center mb-0">
        @modelError.Errors[0].ErrorMessage
      </div>
    }
    <h3 class="text-center mb-4" style="color: #0cc143;">Redefinir Senha</h3>
    <div class="mb-4">
      <label asp-for="Senha" class="form-label">Nova senha</label>
      <input asp-for="Senha" class="form-control" placeholder="******">
      <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    <div class="mb-4">
      <label asp-for="ConfirmaSenha" class="form-label">Confirmar nova senha</label>
      <input asp-for="ConfirmaSenha" class="form-control" placeholder="******">
      <span asp-validation-for="ConfirmaSenha" class="text-danger"></span>
    </div>
    <button type="submit" class="btn w-100 text-white" style="background-color: #0cc143;">Redefinir</button>
  </form>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
