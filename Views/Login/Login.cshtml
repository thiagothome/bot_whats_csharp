@model whats_csharp.Models.LoginModel
@{
  ViewData["Title"] = "Login";
  ViewBag.EsconderBotaoLogout = true;
}

<div class="d-flex justify-content-center align-items-center vh-100">
  <form class="p-4 rounded shadow" asp-controller="Mensagem" asp-action="Mensagem" method="post" style="width: 320px; background-color: #fff;">
    <h3 class="text-center mb-4" style="color: #0cc143;">Login</h3>
    <div class="mb-3">
      <label asp-for="Email" class="form-label">E-mail</label>
      <input asp-for="Email" class="form-control" placeholder="Digite seu e-mail">
      <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-4">
      <label asp-for="Senha" class="form-label">Senha</label>
      <input asp-for="Senha" type="password" class="form-control" placeholder="******">
      <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    <button type="submit" class="btn w-100 text-white" style="background-color: #0cc143;">Entrar</button>

    <div class="text-center mt-3">
      <a asp-controller="Cadastro" asp-action="Cadastro" class="text-decoration-none" style="color: #0cc143;">Criar uma conta</a>
    </div>
    
<div class="text-center mt-3">
      <a asp-controller="EsqueciSenha" asp-action="EsqueciSenha" class="text-decoration-none" style="color: #0cc143;">Esqueci Minha Senha</a>
    </div>

  </form>
</div>
</div>
